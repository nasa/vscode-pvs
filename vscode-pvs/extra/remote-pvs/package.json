{
  "name": "node-remote-sync",
  "version": "0.1",
  "description": "A project to sync folders between a client and a server using WebSockets and Node.js.",
  "main": "dist/server.js",
  "scripts": {
    "start-server": "ts-node server/server.ts",
    "start": "node dist/server.js",
    "build": "tsc",
    "build-exe": "pkg . --targets node18-linux-x64"
  },
  "author": "harsh prakash gupta",
  "license": "ISC",
  "dependencies": {
    "jsonwebtoken": "^9.0.2",
    "ts-command-line-args": "^2.5.1",
    "uuid": "^8.3.2",
    "winston": "^3.13.1",
    "ws": "^8.0.0"
  },
  "bin": "dist/server.js",
  "pkg": {
    "assets": "dist/**/*.js"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.0.0",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^7.4.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.0"
  }
}
